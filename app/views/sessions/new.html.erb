<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, :class => "name_text_field" %><br />
  </div>
  <div class"actions">
    <%= link_to_function "Submit", "$(this).up('form').submit()", :class=>'link' %>
    <hidden><%= f.submit %></hidden>
  </div>
<% end %>
