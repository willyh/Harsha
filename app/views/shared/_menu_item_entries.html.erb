  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, :class => "name_text_field" %><br />
  </div>
  <div class="field">
    <%= f.label "Price $" %>
    <%= f.text_field :price %><br />
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %><br />
  </div>
  <div class="field">
    <% if params[:category] %>
      <%= f.hidden_field :category, :value => params[:category] %>
    <% else %>
      <%= f.label :category %>
      <%= f.text_field :category %><br />
    <% end %>
  </div>
