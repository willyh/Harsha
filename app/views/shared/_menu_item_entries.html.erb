  <div class="field">
    <%= f.label "Name:" %>
    <%= f.text_field :name, :class => "name_text_field" %>
  </div>
  <div class="field">
    <%= f.label "Price $" %>
    <%= f.text_field :price, :class => "price_text_field" %>
  </div>
  <div class="field">
    <%= f.label "Description:" %>
    <%= f.text_field :description, :rows => 9, :class => "description_text_field" %>
  </div>
  <div class="field">
    <% if params[:category] %>
      <%= f.hidden_field :category, :value => params[:category] %>
    <% else %>
      <%= f.label "Category:" %>
      <%= f.text_field :category, :class => "name_text_field" %>
    <% end %>
  </div>
  <div class="field">
    <%= f.file_field :photo, :class => "name_text_field" %>
  </div>
