<div style="display:inline-block">
<%= format_time @order.pickup_time %> 
<% if @order.pickup_time.nil? && @order.completed && @order.id == session[:order]%>
  <% form_for @order do |f| %>
    <%= f.select(:pickup_time, options_for_select(available_times), :style => 'height:20px') %>
    <%= link_to_function "Finish", "$(this).up('form').submit()", :class=>'link' %>
  <% end %>
<% elsif @order.pickup_time.nil? %>
  <%= select_tag :pickup_time, options_for_select(next_time), :style => 'height:20px', :disabled => true %>
  <a onclick="jQuery('#how-to-order').show()">?</a>
<% end %>
</div>
