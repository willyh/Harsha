<ul>
  <% @order.items.split("\n").each do |item| %>
    <li>
    <%= "#{format_price MenuItem.find_by_name(item).price} #{item}"%><br /> 
    </li>
  <% end %>
</ul>
<p><%= @order.instructions %></p>
<h1>
  <%="Total: #{format_price @order.price}" %><br />
  <%= "Pickup time: #{@order.pickup_time}" %>
</h1>
  <% if !@order.completed %>
  <div class="actions">
    <%= link_to "order without paypal",complete_order_path(@order), :method => :put %><br />
  <proceed>
    <%= link_to "Place Order", @order.paypal_url(order_url(@order), payment_notifications_url) %>
  </proceed>
  </div>
  <delete>
    <%= link_to "Cancel Order", @order, { :confirm => "Are you sure?", :method => :delete } %>
  </delete>
  <% end %>
<br />
