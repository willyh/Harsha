<% end %>
<script type="text/javascript">
    $(document).ready(function() {
        hideLarge();
        $("#fuzz").css('height', $(document).height());
        $(".large-item-info").css('top', $window.outerHeight()/2 - $(".large-item-info").outerHeight()/2);
        $(".large-item-info").css('left', $window.outerWidth()/2 - $(".large-item-info").outerWidth()/2);
    });

    $(".item-info").click(function() {
      var name = $(this).attr("id");
      name = name.slice(0, name.length - 5);
      var item = $("#"+name+"_large-info");

      $("#fuzz").show();
      item.show();
    });
    function hideLarge() {
      $("#fuzz").hide();
      $(".large-item-info").hide();
    }
</script>
