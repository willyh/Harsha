<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="post">
    <div class="question">
      <div style='width:100%'>
        <%= f.label :question %><br />
        <%= f.text_area :question, :style => 'width:auto;height:35px' %>
      </div>
    </div>
    <div class="response">
      <div>
        <%= f.label :response %><br />
        <%= f.text_area :response, :style => "width:auto;height: 50px" %>
      </div>
      <div class="actions">
        <%= f.submit %>
<% end %>
        <%= button_to "Delete", @post, :confirm => "Are you sure?", :method => :delete unless @post.id.nil?%>
      </div>
    </div>
  </div>
