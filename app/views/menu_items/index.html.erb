<h1>Listing Menu Items</h1>


<% categories = [] %>
<% @menu_items.each do |item| %>
  <% categories << item.category.capitalize unless categories.include? item.category.capitalize %>
<% end %>

<% categories.each do |categ| %>
  
    <%= link_to categ, display_path(:category => categ) %>
  
<% end %>

<ul>
  <% @menu_items.each do |item| %>
    <% if !params[:category] || item.category.capitalize === params[:category] %>
    <%= render 'shared/describe_each', :item => item %>
    <% end %>
  <% end %>
</ul>

<h2>Add a menu item</h2>
<%= form_for(@menu_item) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <%= render 'shared/menu_item_entries', :f => f %>
  <div class="actions">
    <%= f.submit "Create item" %>
  </div>
<% end %>
