<ul>
  <h1 class='tab'>
    New Option
  </h1>
  <li id="new-option" class="item-name">
    New Option
  </li>
  <h1 class='tab'>
    Options
  </h1>
  <% @options.each do |item| %>
    <li id="o<%= item.id %>" class="item-name <%= 'dim' if item.out_of_stock %>">
      <%= item.name %>
    </li>
  <% end %>
</ul>
