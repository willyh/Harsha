<!DOCTYPE html>
<html>
  <%= render 'shared/hide_url_bar' %>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag 'blueprint/screen', :media => 'screen' %>
  <%= stylesheet_link_tag 'blueprint/print', :media => 'print' %>
  <%= stylesheet_link_tag 'print', :media => 'print' %>
  <%= stylesheet_link_tag 'custom', :media => 'screen' %>
  <meta content-"width=320; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;"/>

<head>
  <link rel="shortcut icon" href="/favicon.ico"/>
  <title><%= "MotoCafe | #{@head}" %></title>
  <div class="header"> <%= "#{@head}" %> </div>
</head>

<% flash.each do |key, value| %>
  <br />
  <div class="flash <%= key %>"><%= value %> ヽ(=^エ^=)ノ</div>
<% end %>
<%= yield %>
<body> 
<div class="navigation_bar">
	<div class="nav_item" onclick="location.href='<%=home_url%>';">
    Home
  </div>
	<div class="nav_item" onclick="location.href='<%=new_order_url%>';">
    Menu
  </div>
</div>
<% if admin? %>
<div class="navigation_bar">
	<div class="nav_item" onclick="location.href='<%=menu_url%>';">
     Edit Menu
  </div>
</div>
<% end %>
</body>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function() {
        $(".item-info").hide();
        hideLarge();
    });

    $(".item-name").mouseover(function() {
       $(".item-info").hide();
      var name = $(this).attr("id");

      var item = $("#"+name+"_info");

      item.show();
    });

    var $window = $(window),
        $stickyEl = $('#item-view');

    var elTop = $stickyEl.offset().top;

    if( $stickyEl != null) {
      $window.scroll(function() {
         var windowTop = $window.scrollTop();

        $stickyEl.toggleClass('sticky', windowTop > elTop);
        var right_pos = $("body").width();
        $stickyEl.css('left',right_pos-$stickyEl.width());
      });
    }

    $(".item-info").click(function() {
      var name = $(this).attr("id");
      name = name.slice(0, name.length - 5);
      var item = $("#"+name+"_large-info");

      $("#fuzz").show();
      item.show();
    });
    function hideLarge() {
      $("#fuzz").hide();
      $(".large-item-info").hide();
    }
  </script>

</html>
